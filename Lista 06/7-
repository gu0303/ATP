using System;
using System.IO;

class Program{
    static void Main(){
        Console.Write("Digite a quantidade de letras (N): ");
        int n = int.Parse(Console.ReadLine());

        string caminhoArquivo = "letras.txt";
        using (StreamWriter writer = new StreamWriter(caminhoArquivo)){
            for (int i = 0; i < n; i++){
                Console.Write($"Digite a letra {i + 1}: ");
                char letra = char.Parse(Console.ReadLine());
                writer.Write(letra);
            }
        }

        string conteudo = File.ReadAllText(caminhoArquivo);

        int quantidadeVogais = ContarVogais(conteudo);

        Console.WriteLine($"A quantidade de vogais no arquivo Ã©: {quantidadeVogais}");
    }

    static int ContarVogais(string texto){
        int count = 0;
        string vogais = "aeiouAEIOU";
        foreach (char c in texto){
            if (vogais.Contains(c)){
                count++;
            }
        }
        return count;
    }
}
